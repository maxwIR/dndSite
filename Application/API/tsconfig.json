{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "es2016", "dom"
        ],
        "module": "commonjs",
        "outDir": "./out",
        "strict": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitThis": false,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}